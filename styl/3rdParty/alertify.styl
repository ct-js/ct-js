.alertify-logs > *
    padding 12px 24px
    {bs}
    border-radius 1px
    &.default
        border 1px solid bd
    &.error
        border 1px solid red
    &.success
        border 1px solid success
    &.warning
        border 1px solid orange

.alertify-logs > *, .alertify-logs > *.default
    background white
.alertify
    position fixed
    background-color rgba(0, 0, 0, 0.3)
    left 0
    right 0
    top 0
    bottom 0
    width 100%
    height 100%
    z-index 99999
    &.hide
        opacity 0
        pointer-events none
    &, &.show
        box-sizing border-box
        transition all 0.33s cubic-bezier(0.25, 0.8, 0.25, 1)
    &, & *
        box-sizing border-box
    .dialog
        padding 12px
    .dialog, .alert
        width 100%
        margin 0 auto
        position relative
        top 50%
        transform translateY(-50%)
        & > *
            width 400px
            max-width 95%
            margin 0 auto
            text-align center
            padding 12px
            background white
            box-shadow 0 2px 4px -1px rgba(0, 0, 0, 0.14), 0 4px 5px 0 rgba(0, 0, 0, 0.098), 0 1px 10px 0 rgba(0, 0, 0, 0.084)
        .msg
            padding 12px
            margin-bottom 12px
            margin 0
            text-align left
        button:not(.btn):not(.pure-button):not(.md-button):not(.mdl-button)
            box-sizing border-box
            position relative
            outline 0
            display inline-block
            align-items center
            white-space nowrap
            text-align center
        nav
            text-align right
        button.btn
            margin 6px 4px
.alertify-logs
    position fixed
    z-index 99999
    &.bottom, &:not(.top)
        bottom 16px
    &.left, &:not(.right)
        left 16px
    &.left > *, &:not(.right) > *
        float left
        transform translate3d(0, 0, 0)
        height auto
        & > *.show
            left 0
        & > *, & > *.hide
            left -110%
    &.right
        right 16px
        & > *
            float right
            transform translate3d(0, 0, 0)
        & > *.show
            right 0
            opacity 1
        & > *, & > *.hide
            right -110%
            opacity 0
    &.top
        top 0
    & > *
        box-sizing border-box
        transition all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1)
        position relative
        clear both
        backface-visibility hidden
        perspective 1000
        max-height 0
        margin 0
        padding 0
        overflow hidden
        opacity 0
        pointer-events none
    & > *.show
        margin-top 12px
        opacity 1
        max-height 1000px
        padding 12px
        pointer-events auto