{
    "main": {
        "name": "Touch",
        "tagline": "Check on-screen button presses and integrate touch events with Actions system.",
        "version": "2.0.0",
        "authors": [{
            "name": "Cosmo Myzrail Gorynych",
            "mail": "admin@nersta.ru"
        }],
        "categories": [
            "inputs"
        ]
    },
    "fields": [{
        "name": "Detect mouse events as touch events",
        "key": "mousetouch",
        "id": "mousetouch",
        "default": true,
        "type": "checkbox"
    }, {
        "name": "Do not cancel standard events",
        "key": "preventdefault",
        "id": "preventdefault",
        "help": "This may help those apps that were designed for mouse from the beginning.",
        "default": false,
        "type": "checkbox"
    }],
    "inputMethods": {
        "Any": "Any touch",
        "Double": "Double touch",
        "Triple": "Triple touch",
        "DeltaPinch": "Pinch",
        "DeltaRotation": "Rotation",
        "PanX": "Panning by X",
        "PanY": "Panning by Y"
    },
    "optionalDependencies": ["place"]
}
