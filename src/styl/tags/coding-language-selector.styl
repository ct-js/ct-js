coding-language-selector
    z-index 1001
    position fixed
    display block
    .aModal
        h1, h2
            color accent1
        width 90vw
        max-width 100rem
        h2 svg
            vertical-align middle
            width 3rem
            height 3rem
            margin-right 0.75rem
            &.feather
                stroke-width 1.1px
        & > *
            padding-left 1.5rem
            padding-right 1.5rem
    .&-aComparisonTable
        gap 1rem 2rem
        flex-flow row wrap
        justify-content center
        & > *
            flex 0.5 1 30rem
