project-selector
    display flex
    flex-flow column nowrap
    gap 1.5rem
    position absolute
    padding 2rem
    left 0
    right 0
    top 0
    bottom 0
    z-index 30
    overflow-y auto
    background radial-gradient(
        circle at 90% 90%,
        homecolor 0%,
        homecolor 6%,
        homedarkcolor 14.9%,
        homecolor 15%,
        homecolor 23%,
        homedarkcolor 32.9%,
        homecolor 33%,
        homecolor 48%,
        homedarkcolor 57.9%,
        homecolor 58%,
        homecolor 75%,
        homedarkcolor 84.9%,
        homecolor 85%
    )
    h1
        font-size 300%
        font-family 'Caveat', fonts
        &.en
            font-family 'Permanent Marker', fonts
        color white
        if (themeDark)
            color act
    .aPanel
        background background
        z-index 35
        {shadamb}
        h2
            align-self flex-end
    .inset
        margin 0
        border-radius 0 0 br br
    .aVersionNumber
        position absolute
        bottom 0
        left 0
        width 100%
        text-align center
        z-index 100
    .aPartyCarrot
        width 2rem
        display inline-block
        position relative
        top -0.1rem
        margin-left 0.5rem
        vertical-align text-bottom
    .&-aPatronsLine
        svg
            margin-right 0.35em
    .&-aMainSection
        height 40rem
        align-items stretch
        gap 1.5rem
        & > :first-child
            flex 1 1 auto
        & > aside
            width 20rem
            flex 0 0 auto
            gap 0.5rem
            if (!themeDark)
                color white
                .anIllustration
                    color white
            & > *
                flex 0 0 auto
            & > .aSpacer
                flex 1 1 auto
    .&-SocialLinks a
        color white
        if (themeDark)
            color act
        &:hover
            opacity 0.65
    .&-SocialLinks a + a
        margin-left 0.35rem

.project-selector-aPreview img
        max-width 100%
        max-height 20em

#theNewProjectField
    display inline-grid
    margin 0 auto
    gap 0.75rem 1.5rem
    grid-template-columns 11rem 1fr
    align-items baseline
    justify-content top
    .theNewProjectField-aLabel
        grid-column 1
        text-align right
    .theNewProjectField-aValue, h2, .theNewProjectField-aButton
        grid-column 2
        align-items baseline
        [type="text"]
            width 16.5rem
    h2
        padding 1rem 0 0.25rem
.theNewProjectField-aButton
    padding 0.5rem 2rem
    justify-self left
    margin-top 1rem
    margin-bottom 0.25rem
