collapsible-section
    margin-top 1rem
    display block
    &:first-child
        margin-top 0
    & > .flexrow
        padding 0.5rem 0
        align-items  center
        cursor pointer
        border-bottom 1px solid borderBright
        h1, h2, h3, h4, h5, h6
            padding 0
            margin 0
            flex 1 1 auto
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
        svg
            {trans}
            margin-left 0.5rem
            flex 0 0 auto
            align-self flex-end
            &.rotated
                transform rotate(180deg)
    .&-aWrapper
        padding 1rem 0 0.5rem
    &.panel
        & > .flexrow
            h1, h2, h3, h4, h5, h6
                margin 0 1rem
            svg
                margin-right 0.5rem
        &.closed > .flexrow
            border-bottom 0
        .collapsible-section-aWrapper
            padding 1rem
