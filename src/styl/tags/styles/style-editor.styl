style-editor
    display flex
    flex-direction row
    z-index 2
    .nav
        border-bottom-left-radius 0
        border-bottom-right-radius 0
    .align
        margin-bottom 0.2em
#stylepreview, #styleleft
    flex 1 1 auto
#styleleft
    flex-grow 0
    width 25em
    padding 0.5em
    .flexfix-header
        margin-bottom 0.5rem
    .flexfix-footer
        margin-top 0.5rem
#topleft, #topcenter, #topright
    svg
        position relative
        top -0.5rem
#bottomleft, #bottomcenter, #bottomright
    svg
        position relative
        top 0.5rem