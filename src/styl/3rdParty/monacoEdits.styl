.monaco-editor .monaco-editor-hover, .vs .monaco-scrollable-element>.scrollbar>.slider
    border-radius br
.monaco-editor
    font-family fonts
    font-family var(--ui-font)
    .button
        padding unset
        margin unset
        border unset
    .find-widget
        .button:not(.disabled):hover
            background-color rgba(act, 0.1)
        .button.disabled:hover
            background-color transparent
        .button.toggle
            border 0
        .monaco-inputbox.synthetic-focus
            outline 1px solid act
.monaco-editor-hover-content
    line-height 1.5 !important
.monaco-editor-hover p
    margin-bottom 0.5rem

.context-view.monaco-menu-container
    border-radius br
    {bs}

.monaco-scrollable-element
    border-radius br
.monaco-menu .monaco-action-bar.vertical
    .action-label
        font-size 1rem
        line-height 1.5
        &.separator
            height 0
            margin-left 0
            margin-right 0
    .action-menu-item
        height 2.5em
